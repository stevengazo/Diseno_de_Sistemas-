@{
    ViewData["Title"] = "Create";
    Layout = "MaintLayout";
}



<div class="container border border-2 align-self-center w-25">

    <div class="row  border rounded  p-1 align-self-center">
        <strong class="d-flex justify-content-center m-1">Bienvenido al registro, ingrese su información</strong>
    </div>

    <div class="row  border rounded  p-1 align-self-center">

        <div class="col nav-item d-flex justify-content-center m-1">

            <ul class="navbar-nav flex-grow-2  w-75 gap-2 align-middle">

                <li class="nav-item  d-flex justify-content-center m-1">
                    <label for="exampleFormControlTextarea1" class="form-label">Nombre usuario</label>
                </li>

                <li class="nav-item d-flex justify-content-center m-1">
                    <input type="text" class="form-control">
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <label for="exampleFormControlTextarea1" class="form-label">Contraseña</label>
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <input type="text" class="form-control">
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <label for="exampleFormControlTextarea1" class="form-label">Correo</label>
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <input type="email" class="form-control">
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <label for="exampleFormControlTextarea1" class="form-label">Cédula</label>
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <input type="text" class="form-control">
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <label for="exampleFormControlTextarea1" class="form-label">Comunidad</label>
                </li>

                <li class="nav-item  d-flex justify-content-center m-1">
                    <input type="text" class="form-control">
                </li>

                <li class="nav-item d-flex justify-content-center m-1">
                    <a type="button" class="btn btn-outline-info bg-light m-1" asp-controller="Login" asp-action="Login">Registrar</a>
                </li>

            </ul>

        </div>

    </div>

    <div class="row  border rounded  p-1 align-self-center">
        <a type="button" class="btn btn-outline-danger bg-light m-1 w-25" asp-controller="Login" asp-action="Login">Atrás</a>
    </div>

</div>
