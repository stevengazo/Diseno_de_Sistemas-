@{
    ViewData["Title"] = "Informacion Usuario";
    Layout = "MaintLayout";
}





<div class="container rounded border " style="background-color:lightgrey;">
    <div class="row">        
        
        <div class="col d-flex justify-content-between m-1 p-3">
            <div class="d-flex">
                <button class="btn btn-outline-info bg-light m-1">
                    Ver Perfil
                </button>
                <button class="btn btn-outline-danger bg-light m-1">
                    Cerra Sesión
                </button>
            </div>
            <div class="d-flex">
                <a class="btn btn-outline-info bg-light m-1">Usuario</a>
                <img src="https://static.vecteezy.com/system/resources/previews/008/442/086/original/illustration-of-human-icon-user-symbol-icon-modern-design-on-blank-background-free-vector.jpg" width="50" height="50" class="rounded rounded-circle" />
            </div>
        </div>
    </div> 
    <div class="row m-1">
        <h1>
            Cambio de Contraseña
        </h1>
    </div>
    <div class="row m-1">
        <div class="col">
            <h5>
                Contraseña Actual
            </h5>
        </div>
        <div class="col form-group">
            <input type="text" class="form-control" placeholder="******" />
        </div>
    </div>
    <div class="row m-1">
        <div class="col">
            <h5>
                Nueva Contraseña
            </h5>
        </div>
        <div class="col form-group">
            <input type="text" class="form-control" placeholder="******" />
        </div>
    </div>
    <div class="row m-1">
        <div class="col">
            <h5>
                Confirmar Contraseña
            </h5>
        </div>
        <div class="col form-group">
            <input type="text" class="form-control" placeholder="******" />
        </div>
    </div>
    <div class="row m-1">
        <button class="btn btn-success m-1">
            Agregar 
        </button>
        <button class="btn btn-info m-1">
            Limpiar
        </button>
    </div>
</div>