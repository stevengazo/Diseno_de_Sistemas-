<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - appproyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/appproyecto.styles.css" asp-append-version="true" />
</head>
<body class="m-2 d-flex gap-4 m-0" style="height: 90vh">
    <header class="bg-light h-100 col-2 rounded">
        <nav class="m-4 d-flex flex-column w-100 justify-content-center gap-5">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-2  w-75 gap-2">
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="Home" asp-action="">
                            <label>Home</label>
                            <i class="bi bi-house "></i>
                        </a>
                    </li>
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="Product" asp-action="Index">
                            <label>Products</label>
                            <i class="bi bi-box-fill"></i>
                        </a>
                    </li>
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="WareHouse" asp-action="Index">
                            <label>
                                Ubicaciones
                            </label>
                            <i class="bi bi-houses-fill"></i>
                        </a>
                    </li>
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="User" asp-action="Index">
                            <label>
                                Usuarios
                            </label>
                            <i class="bi bi-people-fill"></i>
                        </a>
                    </li>
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="Inventory" asp-action="Index">Inventarios<i class="bi bi-boxes"></i></a>
                    </li>
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="Entry" asp-action="Index">Entradas<i class="bi bi-arrow-down-right-square-fill"></i></a>
                    </li>
                    <li class="nav-item border rounded  p-1">
                        <a class="nav-link text-dark d-flex justify-content-around " asp-area="" asp-controller="Exit" asp-action="Index">Salidas<i class="bi bi-arrow-up-left-square-fill"></i></a>
                    </li>
                </ul>
            </div>

            </ul>
        </nav>
    </header>
    <section class="border rounded col-9 p-4 overflow-auto">
        @RenderBody()
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
